<div class='col-md-5 mx-auto'>
<h3>User info</h3>
<%= form_with model: @user do |f| %>
  <!--エラーメッセージ-->
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 
  <p>Name</p>
  <p><%= f.text_field :name, class:"col-lg-8"%></p>
  
  <p>
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*"%>
  </p>

  <p>Introduction</p>
  <p><%= f.text_area :introduction, class:"col-lg-8"%></p>


  <p><%= f.submit "Update User", class:"btn btn-secondary btn-sm" %></p>

<% end %>
</div>