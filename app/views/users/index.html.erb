<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'books/sidebar', books: @books %>

<!--ユーザー一覧-->
