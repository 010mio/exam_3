    <h3>Users</h3>
  <table class="table table-striped">
    <thead>
      <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to user_path(user.id) do%>Show<%end%></td>
    </tbody>
  </table>
  </div>
