<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'users/userinfo', user: @user %>
<%= render 'books/form', book: @book %>
</div>
  <div class="col-md-8 offset-md-1">
  <h3>Book detail</h3>
  <table class="table table-striped">
    <thead>
    </thead>
      <td><%= link_to user_path(@books.user) do%>
      <%= image_tag @books.user.get_profile_image(100,100)%></br>
      <%= @books.user.name %>
      <% end %></td>
      
      <td><%= link_to book_path(@books.id) do %>
      <%= @books.title %>
      <% end %></td>
      
      <td><%= @books.body %></td>

    <% if @books.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-success btn-sm" %></td>
     <td><%= link_to "Destroy", book_path(@books), method: :delete, class:"btn btn-danger btn-sm" %></td>
    <% end %>
  </table>
</div>
</div>
</div>