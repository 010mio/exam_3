<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'sidebar', books: @books %>

<!--投稿一覧-->
  <div class="col-lg-8">
    <h3>Books</h3>
  <table class="table table-striped">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <td><%= link_to user_path(book.user_id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %></td>

      <td><%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
      <% end %></td>

      <td><p><%= book.body %></p></td>
      <% end %>
    </tbody>
</table>
</div>

</div>
</div>