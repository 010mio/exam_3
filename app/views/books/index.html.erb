<h1>Bookers2index</h1>

<% @books.each do |book| %>
<div>
  <%= link_to book.title, "/books/#{book.id}" %>
  <p>Title：<%= book.title %></p>
  <p>Body：<%= book.body %></p>
  <p>User name：<%= book.user.name %></p>
</div>
<% end %>


<%= form_with model: @book do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Opinion</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>