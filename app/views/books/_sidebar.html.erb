<!--サイドバー-->

<div class="container">
<div class="row">
<div class="col-lg-4">
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--ユーザー情報-->

<!--投稿フォーム-->
    <%= form_with model: Book.new do |f| %>
    <h3>New Bbok</h3>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opnion</p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book', class:"btn btn-success btn-sm"%></p>

<% end %>
</div>
